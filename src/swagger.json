  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "Category"
        ],
        "sumary": "Create a category",
        "description": "Create a new category",
        "security": [
          { "bearerAuth": []}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "exemplo": {
                  "name": "category name sample",
                  "description": "category description sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create"
          },
          "500": {
            "description": "Category already exist"
          }
        }
      },
      "get": {
        "tags": [
          "Category"
        ],
        "sumary": "List all categories",
        "description": "List all categories",
        "responses": {
          "200": {
            "descriptions": "Sucess",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "descripton": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import":{
      "post":{
        "tags":["Category"],
        "sumary": "Upload new Categorie",
        "description":"Upload new Categorie",
        "security": [
          { "bearerAuth": []}
        ],
        "requestBody":{
          "content":{
            "multipart/form-data":{
              "schema":{
                "type": "object",
                "properties":{
                  "file":{
                    "type":"string",
                    "format":"binary"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "201":{
            "description":"Created"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": [
          "Specifications"
        ],
        "sumary": "Create a specifications",
        "description": "Create a new specifications",
        "security": [
          { "bearerAuth": []}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specification"
              }
            }
          }
        },
        "responses":{
          "201":{
            "description": "Created"
          },
          "500":{
            "description": "Specification already exists"
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["Sessions"],
        "sumary": "Authentication user",
        "description": "Authentication user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example":{
                  "email": "admin@rentax.com.br",
                  "password": "admin"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Email or password incorrect!"
          }
        }
      }
    },
    "/cars": {
      "post": {
        "tags": ["Cars"],
        "sumary": "Create a new car",
        "description": "Create a new car",
         "security": [
          { "bearerAuth": []}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Car"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Car already exist"
          }
        }
      }
    },
    "/cars/images/{id}":{
      "post": {
        "tags": ["Cars"],
        "sumary": "Upload Images Cars",
        "description": "Upload Images Cars",
        "security": [
          { "bearerAuth": []}
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Car id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "descripton": {
          "type": "string"
        }
      }
    },
    "Car": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "daily_rate": {
          "type": "number"
        },
        "license_plate": {
          "type": "string"
        },
        "fine_amount": {
          "type": "number"
        },
        "brand": {
          "type": "string"
        },
        "category_id": {
          "type": "string"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth":{
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
